[include]
    path = ~/.gitconfig.local
[color]
    diff = auto
    status = auto
    branch = auto
[color "status"]
    added = green
    changed = blue
    untracked = red 
[color "diff"]
    meta = yellow
    old = red 
    new = green
[commit]
    template = ~/.gitmessage
[core]
    editor = vim
    excludesfile = ~/.gitignore_global
[push]
    followTags = true
    default = current
[alias]
    plog = log --graph --pretty=format:'%Cred%h%Creset - %C(yellow)%d%Creset %s %C(cyan dim)(%cr)%Creset %C(bold blue)<%an>%Creset' --abbrev-commit --branches
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --branches
  